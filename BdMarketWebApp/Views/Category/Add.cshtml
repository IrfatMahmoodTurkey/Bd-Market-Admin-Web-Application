@model BdMarketWebApp.Models.Category

@{
    ViewData["Title"] = "BD Market - Add Category";
    ViewData["CategoryActive"] = "active";
}

<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("ViewAll","Category")">Category</a>
        </li>
        <li class="breadcrumb-item active">Add</li>
    </ol>

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h2>Add Category</h2>
            <hr />

            <form method="post" asp-action="Add" class="form-horizontal">
                @Html.Raw(ViewData["Message"])

                <div class="form-group">
                    <label asp-for="Name">Category Name</label>
                    <br />
                    <input type="text" asp-for="Name" placeholder="Enter Category Name" class="form-control" />
                    <br />
                    <span asp-validation-for="Name" class="alert-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" style="width: 100%"/>
                </div>

            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
