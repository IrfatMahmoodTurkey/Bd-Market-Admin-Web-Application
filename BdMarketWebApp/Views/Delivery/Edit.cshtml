@model BdMarketWebApp.Models.Delivery

@{
    ViewData["Title"] = "BD Market - Edit Delivery";
    ViewData["DeliveryActive"] = "active";
}

<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("ViewAll","Delivery")">Delivery</a>
        </li>
        <li class="breadcrumb-item active">Edit</li>
    </ol>

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h2>Edit Delivery</h2>
            <hr />

            <form method="post" asp-action="Edit" class="form-horizontal">
                @Html.Raw(ViewData["Message"])

                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="PlaceName">Place Name</label>
                    <br />
                    <input type="text" asp-for="PlaceName" placeholder="Enter Place Name" class="form-control" />
                    <br />
                    <span asp-validation-for="PlaceName" class="alert-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Charge">Delivery Charge</label>
                    <br />
                    <input type="number" min="1" asp-for="Charge" placeholder="Enter Delivery Charge" class="form-control" />
                    <br />
                    <span asp-validation-for="Charge" class="alert-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Edit" class="btn btn-default" style="width: 100%"/>
                </div>

            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>



<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

