@model BdMarketWebApp.Models.Designation
@{
    ViewData["Title"] = "BD Market - Edit Designation";
    ViewData["DesignationActive"] = "active";
}

<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("ViewAll","Designation")">Designation</a>
        </li>
        <li class="breadcrumb-item active">Edit</li>
    </ol>

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h2>Edit Designation</h2>
            <hr />

            <form method="post" asp-action="Edit" class="form-horizontal">
                @Html.Raw(ViewData["Message"])
            
                <input type="hidden" asp-for="Id"/>

                <div class="form-group">
                    <label asp-for="Name">Designation Name</label>
                    <br />
                    <input type="text" asp-for="Name" placeholder="Enter Designation Name" class="form-control" />
                    <br />
                    <span asp-validation-for="Name" class="alert-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Edit" class="btn btn-default" style="width: 100%"/>
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>



<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>