@model BdMarketWebApp.Models.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "BD Market - Change Password";
}


<div class="container-fluid">
    <div class="container-fluid">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("ViewEmployee","Employee")">Employee</a>
            </li>
            <li class="breadcrumb-item active">Change Password</li>
        </ol>

        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h2>Edit Password</h2>
                <hr />

                <form method="post" asp-action="ChangePassword" class="form-horizontal">
                    @Html.Raw(ViewData["Message"])
                    
                    <div class="form-group">
                        <label asp-for="OldPassword">Old Password</label>
                        <br />
                        <input type="text" asp-for="OldPassword" placeholder="Enter Old Password" class="form-control" />
                        <br />
                        <span asp-validation-for="OldPassword" class="alert-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="NewPassword">New Password</label>
                        <br />
                        <input type="text" asp-for="NewPassword" placeholder="Enter New Password" class="form-control" />
                        <br />
                        <span asp-validation-for="NewPassword" class="alert-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ReEnterPassword">Re Enter New Password</label>
                        <br />
                        <input type="text" asp-for="ReEnterPassword" placeholder="Enter Re Enter New Password" class="form-control" />
                        <br />
                        <span asp-validation-for="ReEnterPassword" class="alert-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Change" class="btn btn-default" style="width: 100%"/>
                    </div>

                </form>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>