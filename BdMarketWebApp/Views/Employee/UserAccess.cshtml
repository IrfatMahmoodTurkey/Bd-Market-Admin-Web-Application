@model BdMarketWebApp.Models.UserAccess

@{
    ViewData["Title"] = "BD Market - User Access";
    ViewData["EmployeeActive"] = "active";
}

<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("ViewEmployee","Employee")">Employee</a>
        </li>
        <li class="breadcrumb-item active">Access</li>
    </ol>

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h2>Employee Access</h2>
            <hr />

            <form method="post" asp-action="UserAccess" class="form-horizontal">
                @Html.Raw(ViewData["Message"])

                <input type="hidden" asp-for="UserId" value="@ViewData["userId"]" />
                <div class="form-group">
                    <label asp-for="PageId">Page Name</label>
                    <br />
                    <select asp-for="PageId" class="form-control">
                        <option value="">-- Select Page Name --</option>
                        <option value="1">Category Access</option>
                        <option value="2">Delivery Access</option>
                        <option value="3">Designation Access</option>
                        <option value="4">Employee Access</option>
                        <option value="5">Order Access</option>
                        <option value="6">Item Access</option>
                        <option value="7">User Access</option>
                    </select>
                    <br />
                    <span asp-validation-for="PageId" class="alert-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" style="width: 100%"/>
                </div>

            </form>


            <table class="table">
                <thead>
                    <tr>
                        <td>SL</td>
                        <td>Access Name</td>
                        <td>Action</td>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int count = 1;

                        foreach (UserAccess userAccess in ViewBag.UserAccesses)
                        {
                            <tr>
                                <td>@count</td>

                                @if (userAccess.PageId == 1)
                                {
                                    <td>Category Access</td>
                                }
                                else if (userAccess.PageId == 2)
                                {
                                    <td>Delivery Access</td>
                                }
                                else if (userAccess.PageId == 3)
                                {
                                    <td>Designation Access</td>
                                }
                                else if (userAccess.PageId == 4)
                                {
                                    <td>Employee Access</td>
                                }
                                else if (userAccess.PageId == 5)
                                {
                                    <td>Order Access</td>
                                }
                                else if (userAccess.PageId == 6)
                                {
                                    <td>Item Access</td>
                                }
                                else if (userAccess.PageId == 7)
                                {
                                    <td>User Access</td>
                                }

                                <td><a href="@Url.Action("RemoveAccess", "Employee", new {id = userAccess.Id})">Remove</a></td>
                            </tr>

                            count++;
                        }
                    }


                </tbody>
            </table>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>



<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>