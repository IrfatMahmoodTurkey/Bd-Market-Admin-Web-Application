
@{
    ViewData["Title"] = "BD Market - Stock in";
    ViewData["ItemActive"] = "active";
}

<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("ViewAll","Product")">Product</a>
        </li>
        <li class="breadcrumb-item active">Stock In</li>
    </ol>

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h2>Stock In Item</h2>
            <hr />

            <form class="form-horizontal" asp-action="StockIn">
                @Html.Raw(ViewData["Message"])

                <input type="hidden" name="ProductId" value="@ViewData["ProductId"]"/>

                <div class="form-group">
                    <label>Product Title</label>
                    <br/>
                    <input type="text" value="@ViewData["ProductTitle"]" placeholder="Product Title" class="form-control" readonly="readonly"/>
                    <br/>
                </div>

                <div class="form-group">
                    <label>Previous Quantity</label>
                    <br/>
                    <input type="text" value="@ViewData["PrevQuantity"]" placeholder="Previous Quantity" class="form-control" readonly="readonly"/>
                    <br/>
                </div>


                <div class="form-group">
                    <label>Quantity</label>
                    <br/>
                    <input type="number" name="quantity" value="1" placeholder="Enter Quantity" class="form-control" min="1" max="10000000"/>
                    <br/>
                </div>


                <div class="form-group">
                    <input type="submit" class="btn btn-default" value="Stock In" style="width: 100%"/>
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
