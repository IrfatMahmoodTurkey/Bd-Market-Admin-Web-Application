@model BdMarketWebApp.Models.User
@{
    ViewData["Title"] = "BD Market - View Users";
    ViewData["UserActive"] = "active";
}

<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("ViewAll","Product")">User</a>
        </li>
        <li class="breadcrumb-item active">View All</li>
    </ol>

    <div class="row" style="padding-top: 10px; padding-bottom: 10px">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="form-horizontal">
                <div style="width: 100%">
                    <button onclick="location.href = '@Url.Action("RegisterUser", "User")';" class="add_button"><i class="fas fa-plus-square"></i> Add User</button>
                </div>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
    <br />

    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            User Table
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>SL</th>
                            <th>User Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Verification Code</th>
                            <th>Is Verified</th>
                            <th>Registration Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>SL</th>
                            <th>User Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Verification Code</th>
                            <th>Is Verified</th>
                            <th>Registration Date</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @{
                            int count = 1;

                            foreach (User user in ViewBag.Users)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@user.UserName</td>
                                    <td>@user.Email</td>
                                    <td>@user.Phone</td>
                                    <td>@user.VerificationCode</td>

                                    @if (user.Verify == 1)
                                    {
                                        <td>Verified</td>
                                    }
                                    else
                                    {
                                        <td>Not Verified</td>
                                    }

                                    <td>@user.AccountCreatingTime</td>
                                    <td><a href="@Url.Action("Banned","User", new {id=user.UserId})">Banned User</a></td>
                                </tr>

                                count++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Updated Table at @DateTime.Now.ToString("F")</div>
    </div>
</div>